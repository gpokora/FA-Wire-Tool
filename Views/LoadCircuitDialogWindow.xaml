<Window x:Class="FireAlarmCircuitAnalysis.Views.LoadCircuitDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Load Circuit Configuration" 
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Load Circuit Configuration" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
        
        <!-- Circuit List -->
        <DataGrid Grid.Row="1" Name="dgCircuits" AutoGenerateColumns="False" 
                 CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False"
                 SelectionMode="Single" GridLinesVisibility="Horizontal"
                 AlternatingRowBackground="#F8F9FA" Margin="0,0,0,15">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Created" Binding="{Binding CreatedDate, StringFormat=yyyy-MM-dd HH:mm}" Width="130" IsReadOnly="True"/>
                <DataGridTextColumn Header="Modified" Binding="{Binding ModifiedDate, StringFormat=yyyy-MM-dd HH:mm}" Width="130" IsReadOnly="True"/>
                <DataGridTextColumn Header="Devices" Binding="{Binding DeviceCount}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Project" Binding="{Binding ProjectName}" Width="150" IsReadOnly="True"/>
            </DataGrid.Columns>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="MouseDoubleClick" Handler="Row_MouseDoubleClick"/>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
        
        <!-- Preview Panel -->
        <GroupBox Grid.Row="2" Header="Preview" Margin="0,0,0,15" Height="120">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Margin="10">
                    <TextBlock Name="lblPreviewName" Text="Name: " FontWeight="Bold" Margin="0,2"/>
                    <TextBlock Name="lblPreviewDescription" Text="Description: " Margin="0,2" TextWrapping="Wrap"/>
                    <TextBlock Name="lblPreviewCreated" Text="Created: " Margin="0,2"/>
                    <TextBlock Name="lblPreviewCreatedBy" Text="Created By: " Margin="0,2"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Margin="10">
                    <TextBlock Name="lblPreviewDevices" Text="Devices: " Margin="0,2"/>
                    <TextBlock Name="lblPreviewMain" Text="Main Circuit: " Margin="0,2"/>
                    <TextBlock Name="lblPreviewBranches" Text="Branches: " Margin="0,2"/>
                    <TextBlock Name="lblPreviewProject" Text="Project: " Margin="0,2"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="btnRefresh" Content="Refresh" Width="80" Height="30" Margin="0,0,10,0" Click="BtnRefresh_Click"/>
            <Button Name="btnDelete" Content="Delete" Width="80" Height="30" Margin="0,0,10,0" Click="BtnDelete_Click"/>
            <Button Name="btnLoad" Content="Load" Width="80" Height="30" Margin="0,0,10,0" Click="BtnLoad_Click"/>
            <Button Name="btnCancel" Content="Cancel" Width="80" Height="30" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>