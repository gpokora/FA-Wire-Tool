<Window x:Class="FireAlarmCircuitAnalysis.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Fire Alarm Circuit Settings" 
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F6FA">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="10">
            <TextBlock Text="SETTINGS" FontSize="18" FontWeight="Bold" 
                      Foreground="White" HorizontalAlignment="Center"/>
        </Border>

        <!-- Settings Tabs -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- General Tab -->
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <GroupBox Header="Default System Parameters" Margin="0,0,0,10">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="System Voltage:" 
                                          VerticalAlignment="Center"/>
                                <ComboBox Grid.Row="0" Grid.Column="1" Name="cmbDefaultVoltage" 
                                         SelectedIndex="0">
                                    <ComboBoxItem>29 VDC (Filtered)</ComboBoxItem>
                                    <ComboBoxItem>24 VDC (Nominal)</ComboBoxItem>
                                </ComboBox>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Minimum Voltage (VDC):" 
                                          VerticalAlignment="Center"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Name="txtDefaultMinVoltage" 
                                        Text="16.0"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Maximum Load (A):" 
                                          VerticalAlignment="Center"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Name="txtDefaultMaxLoad" 
                                        Text="3.0"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Reserved Capacity (%):" 
                                          VerticalAlignment="Center"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Name="txtDefaultReserved" 
                                        Text="20"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Default Wire Gauge:" 
                                          VerticalAlignment="Center"/>
                                <ComboBox Grid.Row="4" Grid.Column="1" Name="cmbDefaultWireGauge" 
                                         SelectedIndex="1">
                                    <ComboBoxItem>18 AWG</ComboBoxItem>
                                    <ComboBoxItem>16 AWG</ComboBoxItem>
                                    <ComboBoxItem>14 AWG</ComboBoxItem>
                                    <ComboBoxItem>12 AWG</ComboBoxItem>
                                    <ComboBoxItem>10 AWG</ComboBoxItem>
                                    <ComboBoxItem>8 AWG</ComboBoxItem>
                                </ComboBox>

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Supply Distance (ft):" 
                                          VerticalAlignment="Center"/>
                                <TextBox Grid.Row="5" Grid.Column="1" Name="txtDefaultSupplyDistance" 
                                        Text="50"/>

                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Routing Overhead (%):" 
                                          VerticalAlignment="Center"/>
                                <TextBox Grid.Row="6" Grid.Column="1" Name="txtRoutingOverhead" 
                                        Text="15"/>
                            </Grid>
                        </GroupBox>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Button Panel -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="btnDefaults" Content="Reset to Defaults" Width="120" Margin="5" 
                       Click="BtnDefaults_Click"/>
                <Button Name="btnCancel" Content="Cancel" Width="80" Margin="5" 
                       Click="BtnCancel_Click"/>
                <Button Name="btnSave" Content="Save" Width="80" Margin="5" 
                       Click="BtnSave_Click" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>